<h1 class="h1">Lista de usuários</h1>

<table class="table table-hover">
    <thead>
        <tr>        
            <th scope="col">Codigo</td>
            <th scope="col">Nome</td>
            <th scope="col">idade</td>
            <th scope="col">Action</td>
        </tr>
    </thead>
{{!-- Esta é forma que o node usa para entrar em objetos, lembrando que data foi um nome escolhido --}}
{{#data}}
    <tr>
        
        <td>{{ id }}</td>
        <td>{{ nome }}</td>
        <td>{{ idade }}</td>
        <td>
            <a href="update/{{ id }}"><img src="/img/editar.png" alt="editar" width="15%"></a>
            <a href="deletar/{{ id }}" class="deletar"><img src="/img/deletar.png" alt="deletar" width="15%"></a>
        </td>
        
    </tr>
{{/data}}
</table>
